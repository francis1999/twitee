generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String
  name String?
  userName String?
  comments Comment[]  
  likes Like[]  
  twits Twit[]  
  @@map("auths")
}
model Comment{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comment String
  authId Int 
  auth Auth @relation(fields: [authId], references: [id])
  @@map("comments")
}

model Twit{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  content String
  authId Int 
  auth Auth @relation(fields: [authId], references: [id])
  @@map("twits")
}

model Like{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  like String
  authId Int 
  auth Auth @relation(fields: [authId], references: [id])
  @@map("likes")
}